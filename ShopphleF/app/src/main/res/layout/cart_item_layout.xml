<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/uniqlo2" />

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cart_item_image"
            android:padding="8dp"
            android:textColor="#8c8377"
            android:text="Uniqlo" />

        <TextView
            android:id="@+id/cart_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cart_item_image"
            android:padding="8dp"
            android:text="Relax Dry Stretch"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_item_description"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cart_item_image"
            android:padding="8dp"
            android:text="$49"
            android:textColor="#f4ca64" />

        <ImageView
            android:id="@+id/ic_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_addc"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/cart_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="258dp"
            android:layout_marginTop="98dp"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ic_remove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_minusc"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="100dp"/>
        <ImageView
            android:id="@+id/ic_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="100dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
